  "version": "0.2.0",
  "configurations": [
    {
      "name": "Rails server",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceFolder}/bin/rails",
      "args": ["server"]
    },
    {
      "name": "RSpec - all",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceFolder}/bin/rspec",
      "args": ["-I", "${workspaceFolder}"]
    },
    {
      "name": "Rspec - only failed",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/bin/rspec",
      "args": ["-I", "${workspaceFolder}", "--only-failures"]
    }
  ]
}
